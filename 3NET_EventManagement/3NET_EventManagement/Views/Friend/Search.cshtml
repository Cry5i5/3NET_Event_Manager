@model _3NET_EventManagement.Models.AddFriendViewModel

@{
    ViewBag.Title = "Add a Friend";
}

<h2>Add a Friend</h2>
@{
    if (ViewBag.error != null)
    {
        <div class="alert alert-danger">@ViewBag.error</div>

    }
}

@using(Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">

        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.LabelFor(model => model.FriendName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.FriendName)
                @Html.ValidationMessageFor(model => model.FriendName)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

